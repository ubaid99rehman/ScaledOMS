<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <SolidColorBrush x:Key="TextBackground" Color="#FF000000"/>
    <SolidColorBrush x:Key="TextForeground" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="TextBoxBackground" Color="#FF000000"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="ButtonBackground" Color="{Binding ButtonBackground}"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="TitleBarBackground" Color="#FF000000"/>
    <SolidColorBrush x:Key="TitleBarForeground" Color="#FFFFFFFF"/>

    <SolidColorBrush x:Key="ScreenBackground" Color="#FF000000"/>

    <FontFamily x:Key="FontFamily">Arial</FontFamily>
    <FontWeight x:Key="FontWeight">Normal</FontWeight>

    <!-- Font Size Resource -->
    <x:Double x:Key="FontSize">18.0</x:Double>
    <!-- Font size definition -->
</ResourceDictionary>
